<div class="login-container">
    <h1>Inicio de Sesión</h1>
    <form method="POST" id="loginForm">
        <label for="email">Correo electrónico:</label>
        <input type="email" id="email" name="email" required>
        <br>
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>
        <br>
        <button type="submit">Iniciar Sesión</button>
    </form>
    <hr>
    <button class="register-btn" onclick="location.href='/register'">Registrate</button>
</div>
<hr>
<div class="github-login">
    <a href="/api/sessions/github">Entrár con GitHub</a>
</div>
<hr>
<button class="forgot-password-btn" onclick="location.href='/forget-password'">Olvidé la contraseña</button>

<script src="/js/login.js"></script>