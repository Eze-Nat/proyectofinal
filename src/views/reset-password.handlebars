<div class="reset-password-container">
    <h1 class="reset-password-heading">Crea una nueva contraseña</h1>
    <hr class="section-divider">
    <form action="/api/sessions/reset-password/{{ this.user }}" method="post" class="reset-password-form">
        Nueva contraseña: <input type="text" name="newPassword"> <input type="submit" value="Cambiar contraseña"><br><br> 
    </form>
    <hr class="section-divider">
    <button onclick="location.href='/login'" class="login-btn">Login</button>
    <hr class="section-divider">
    <button onclick="location.href='/register'" class="register-btn">Regístrate</button>
</div>
